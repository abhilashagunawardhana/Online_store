<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         
         
         <servlet>
         
         <servlet-name>paymentInsert</servlet-name>
         <servlet-class>online_store.paymentInsert</servlet-class>
         
         </servlet>
         
         <servlet-mapping>
         
         <servlet-name>paymentInsert</servlet-name>
		 <url-pattern>/payment</url-pattern>
		 
         </servlet-mapping>
         
          <servlet>
        <servlet-name>updatePaymentServlet</servlet-name>
        <servlet-class>online_store.updatePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatePaymentServlet</servlet-name>
        <url-pattern>/updatePayment</url-pattern>
    </servlet-mapping>
    
    <!--  for deleting reviews -->
    <servlet>
        <servlet-name>DeletePaymentServlet</servlet-name>
        <servlet-class>online_store.DeleteReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePaymentServlet</servlet-name>
        <url-pattern>/deleteReview</url-pattern>
    </servlet-mapping>
         
         
        
         
         
         
         
         
         
</web-app>

